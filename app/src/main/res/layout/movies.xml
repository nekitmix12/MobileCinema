<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_faded"
            android:contentDescription="@string/film_image_description" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/topScrollView"
            android:layout_width="match_parent"
            android:layout_height="464dp"
            android:backgroundTint="@color/dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </androidx.viewpager2.widget.ViewPager2>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/topScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topScrollView"
            app:layout_constraintVertical_bias="0.05">

            <ProgressBar
                android:id="@+id/first_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar"
                app:layout_constraintTop_toTopOf="@+id/topScrollView"

                app:layout_constraintVertical_bias="0.1" />

            <ProgressBar
                android:id="@+id/second_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar"
                app:layout_constraintTop_toTopOf="@+id/topScrollView"

                app:layout_constraintVertical_bias="0.1" />

            <ProgressBar
                android:id="@+id/third_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar"
                app:layout_constraintTop_toTopOf="@+id/topScrollView"

                />

            <ProgressBar
                android:id="@+id/fourth_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:max="100"

                android:progressDrawable="@drawable/progress_bar"
                app:layout_constraintTop_toTopOf="@+id/topScrollView" />

            <ProgressBar
                android:id="@+id/fifth_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar"
                app:layout_constraintTop_toTopOf="@+id/topScrollView" />
        </LinearLayout>


        <TextView
            android:id="@+id/movies_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/manrope_bold"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/topScrollView"
            app:layout_constraintEnd_toEndOf="@+id/topScrollView"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topScrollView"
            app:layout_constraintVertical_bias="0.77" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/topScrollView"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/movies_name"
            app:layout_constraintTop_toTopOf="parent"
            >

        </com.google.android.flexbox.FlexboxLayout>

        <Button
            android:id="@+id/button"
            style="@style/MoviesScreenLabelButton"
            android:background="@drawable/gradient_accent"
            android:text="@string/watch"
            app:layout_constraintBottom_toBottomOf="@+id/topScrollView"
            app:layout_constraintEnd_toEndOf="@+id/topScrollView"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@+id/topScrollView"
            app:layout_constraintTop_toTopOf="@+id/topScrollView"
            app:layout_constraintVertical_bias="0.93" />


        <Button
            android:id="@+id/random_film_button"
            style="@style/MoviesScreenScrollButton"
            android:background="@drawable/gradient_accent"
            android:drawableLeft="@drawable/game_die"
            android:text="@string/rand_film"
            app:layout_constraintBottom_toTopOf="@+id/favoriteMoviesRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topScrollView"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearLayoutMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CommonLayout"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/random_film_button">
            <TextView
                android:id="@+id/textView"
                style="@style/MoviesScreenText"
                android:text="@string/my_favorite" />

            <TextView
                android:id="@+id/textView2"
                style="@style/MoviesScreenText"
                android:gravity="end"

                android:text="@string/all" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favoriteMoviesRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@id/all_films"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutMovies"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/all_films"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MoviesScreenText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:text="@string/all_film"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favoriteMoviesRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/all_films_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CommonLayout"
            android:layout_marginTop="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/all_films" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>